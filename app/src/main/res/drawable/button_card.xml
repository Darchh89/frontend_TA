<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#FFFFFF"/>

    <!-- Sudut sedikit membulat -->
    <corners android:radius="12dp"/>

    <!-- Border sangat tipis agar tampak elegan -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Padding biar teks tidak terlalu mepet -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>